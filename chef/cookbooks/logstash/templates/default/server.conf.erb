input {
  tcp {
    type => "tcp-input"
    port => "5959"
    format => "json_event"
  }
  gelf {
    type => "gelf-input"
  }
}

output {
	stdout { debug => true debug_format => "json" }
	<% if @enable_embedded_es -%>
	elasticsearch { embedded => true }
	<% else -%>
    elasticsearch { host => "<%= @es_server.first.ipaddress rescue '127.0.0.1' %>" cluster => "<%= @es_cluster || 'elasticsearch' %>" port => "<%= node[:logstash][:server][:external_es_port] %>" }
	<% end -%>
	<% unless @graphite_server.empty? -%>
	graphite { host => "<%= @graphite_server.first.ipaddress %>" metrics => ["logstash.events", "1"] }
	<% end -%>
}
