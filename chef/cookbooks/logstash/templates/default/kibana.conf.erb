NameVirtualHost *:80
<VirtualHost *:80>
  ServerName <%= @server_name %>
	DocumentRoot "<%= @docroot %>"
	

	<Directory "<%= @docroot %>">
		DirectoryIndex index.php
  </Directory>

  <Location "/">
    AuthType basic
    AuthName "Kibana"
    AuthBasicProvider file
    AuthUserFile <%= node[:logstash][:basedir] %>/kibana/htpasswd
    require valid-user
  </Location>



</VirtualHost>
