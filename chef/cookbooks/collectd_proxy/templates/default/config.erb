# FIXME: This should just be an iteration over "node['collectd_proxy']['plugins']"
LoadPlugin "network"
LoadPlugin "write_graphite"
<Plugin "network">
  Listen "<%= node['collectd_proxy']['listen']['ip'] %>"
</Plugin>
<Plugin write_graphite>
  <Carbon>
     Host "<%= node['collectd_proxy']['graphite']['host'] %>"
     Port "<%= node['collectd_proxy']['graphite']['port'] %>"
     Prefix "<%= node['collectd_proxy']['graphite']['prefix'] %>"
     SeparateInstances <%= node['collectd_proxy']['graphite']['seperate_instances'] %> 
  </Carbon>
</Plugin>
